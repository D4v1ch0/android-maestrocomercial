<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MyAppBaseTheme" parent="AppTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MyAppTheme" parent="MyAppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyAppTheme.NoTitleBar" parent="MyAppTheme">        
       <item name="android:windowFullscreen">true</item>
       <item name="android:windowNoTitle">true</item>
   </style>
   
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bg_main</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
         
	
   <style name="BrandTheme" parent="MyAppTheme">        
        <item name="android:windowBackground">@color/bg_main</item>        
        <item name="android:editTextStyle">@style/Widget.EditText.Brand</item>
        <item name="android:buttonStyle">@style/Widget.Button.Brand</item>
                      
   </style>
   
   <style name="BrandTheme.NoTitleBar" parent="BrandTheme">        
       <item name="android:windowFullscreen">true</item>
       <item name="android:windowNoTitle">true</item>
   </style>
      
   <style name="Widget.EditText.Brand" parent="@style/Widget.EditText">
       <item name="android:background">@android:color/white</item> 
       <item name="android:paddingLeft">12dp</item>
       <item name="android:paddingRight">12dp</item>       
   </style>   
   
   <style name="Widget.Button.Brand" parent="@style/Widget.Button">
       <item name="android:background">@drawable/button</item>  
       <item name="android:textColor">@android:color/white</item>     
   </style>
   
   <style name="Widget.Spinner.Brand" parent="@android:style/Widget.Spinner.DropDown"> 
		<item name="android:background">@drawable/spinner</item>     
		<item name="android:textColor">@android:color/white</item>  
   </style>     
   
   <style name="Widget.ListViewItem.Activated.Brand" parent="AppTheme">               
        <item name="android:activatedBackgroundIndicator">@drawable/rowlist</item>
	</style>
      
</resources>
