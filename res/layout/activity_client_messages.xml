<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_client_message_leftright_margin"
    android:layout_marginRight="@dimen/activity_client_message_leftright_margin"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content_client_view_message"
        android:layout_width="match_parent"        
        android:layout_height="wrap_content" >
    </FrameLayout>

    <rp3.widget.ViewPager
        android:id="@+id/pager"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"            
            android:background="@color/bg_highlight_title"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/highlight_title" />
    </rp3.widget.ViewPager>

