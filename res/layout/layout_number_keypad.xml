<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/content"
    android:layout_height="wrap_content">
    
    <TableRow>
        <Button android:text="@string/number_one" 
            android:id="@+id/button_number_one"
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_two"
            android:id="@+id/button_number_two"
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_three"
            android:id="@+id/button_number_three"
            style="@android:attr/buttonBarStyle"/>
    </TableRow>
    
    <TableRow>
        <Button android:text="@string/number_for"
            android:id="@+id/button_number_for"
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_five"
            android:id="@+id/button_number_five"
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_six"
            android:id="@+id/button_number_six"
            style="@android:attr/buttonBarStyle"/>
    </TableRow>
    
    <TableRow>
        <Button android:text="@string/number_seven"
            android:id="@+id/button_number_seven"
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_eight"
            android:id="@+id/button_number_eight"
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_nine"
            android:id="@+id/button_number_nine"
            style="@android:attr/buttonBarStyle"/>
    </TableRow>

    <TableRow>
        <Button
            android:drawableLeft="@drawable/ic_action_discard_numpad"                        
            android:id="@+id/action_discard"                
            android:layout_width="match_parent" 
            android:layout_span="2"         
            android:text="@string/label_clear_numpad"          
            style="@android:attr/buttonBarStyle"/>
        <Button android:text="@string/number_zero"
            android:id="@+id/button_number_zero"                
            android:layout_width="match_parent"                    
            style="@android:attr/buttonBarStyle"/>
	</TableRow>
	
</TableLayout>
